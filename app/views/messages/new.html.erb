<h1 Send Message %>

<%= form_tag messages_path do %>
  <div class="field">
    <%= label_tag :email, 'To' %>
    <%= text_field_tag :to %>
  </div>
  <div class="field">
    <%= label_tag :body %>
    <%= text_area_tag :body %>
  </div>
  <div class="actions"><%= submit_tag 'Send', class: 'btn btn-success' %></div>
<% end %>
