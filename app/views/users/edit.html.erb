<h1> Update your profile </h1>

<%= form_for @user, html: { :multipart => true } do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :birthday %>
    <%= f.date_select :birthday, start_year: 1990 %>
  </div>
  <div class="field">
    <%= f.label :about %>
    <%= f.text_area :about %>
  </div>
  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>
  <div class="field">
    <%= fields_for @user.try(:question) || :question do |ff| %>
      <%= ff.label :text%>
      <%= ff.text_field :text %>
      <%= ff.label :answer%>
      <%= ff.text_field :answer %>
    <% end %>
  </div>
  <div class="actions"><%= f.submit 'Update', class: 'btn btn-primary' %></div>
<% end %>

