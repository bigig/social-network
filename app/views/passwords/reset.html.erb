<%= form_tag passwords_path do %>

  <div class='field'>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div class='field'>
    <%= label_tag :question %>
    <%= text_field_tag :question %>
  </div>

  <div class='field'>
    <%= label_tag :answer %>
    <%= text_field_tag :answer %>
  </div>

  <div class='field'>
    <%= label_tag :password, 'New Password' %>
    <%= password_field_tag :password %>
  </div>

  <div class='actions'><%= submit_tag 'Submit', class: 'btn btn-info' %>
<% end %>
