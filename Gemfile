  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'jbuilder'
gem 'twitter-bootstrap-rails'
gem 'bcrypt-ruby', '~> 3.0.0'
gem "paperclip-dropbox", ">= 1.1.7"

group :production do
  gem 'pg', '0.15.1'
  gem 'rails_12factor', '0.0.2'
end
